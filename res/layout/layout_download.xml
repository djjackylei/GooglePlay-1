<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bt_fav"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_margin="2dp"
        android:background="@drawable/detail_bottom_bg"
        android:text="收藏" />
   	  <Button
        android:id="@+id/bt_share"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
          android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/detail_bottom_bg"
        android:text="分享" />
    <Button
        android:id="@+id/bt_download"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@id/bt_share"
        android:layout_toRightOf="@id/bt_fav"
        android:background="@drawable/progress_btn_normal"
        android:text="下载" />
<!-- 层叠一个放置进度条的帧布局 -->
    <FrameLayout
        android:id="@+id/fl_download"
         android:layout_width="match_parent"
        android:layout_height="46dp" 
        android:layout_margin="2dp"
         android:layout_toLeftOf="@id/bt_share"
        android:layout_toRightOf="@id/bt_fav">
    </FrameLayout>

</RelativeLayout>